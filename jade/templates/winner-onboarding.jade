fa-view
  fa-modifier(fa-opacity="onboardingOpacity" fa-size='[getPageWidth(), getPageHeight()]')
    fa-surface.information-card(fa-size='[(getPageWidth() - 10), {{informationCardHeight}}]')
      fa-app
        fa-modifier(fa-size="[getPageWidth() - 10, 400]" fa-opacity="photoTransparency")
          fa-surface(ng-if="onboardingPhoto")
            //- photo
            .photo-info-container(ng-style="{'padding' : '10px', 'margin-top' : '{{photoInfoContainerMarginTop}}px'}")
              .current-photo(ng-style="{'background-image':'url({{winner.avatar_url || winnerAvatarDefault}})', 'height': '200px',  'width': '{{getPageWidth()-20}}', 'background-size': 'contain', 'background-repeat': 'no-repeat', 'background-position': 'center'}")
              .photo-info-container-buttons(ng-style="{'position' : 'relative'}")
                .replace-photo-camera(ng-style="{'left' : '{{cameraLeftMargin}}%'}")
                .replace-photo-albums(ng-style="{'right' : '{{albumRightMargin}}%'}") 
              .save-user-photo(ng-click="showOnboardingProcess(onboardingNextProcess)") Save

        fa-modifier(fa-size="[getPageWidth() - 10, 400]" fa-opacity="bioTransparency")
          fa-surface(ng-if="onboardingBio")
            //- bio  
            .bio-info-container(ng-style="{'padding' : '10px', 'margin-top' : '{{photoInfoContainerMarginTop}}px'}")
              textarea.bio-area(ng-style="{'height' : '250px', 'width' : '98%', 'border' : '1px solid #ffdc00'}")
              .save-user-bio(ng-click="showOnboardingProcess(onboardingNextProcess)") Save
              .back-one-process(ng-click="backOnboardingProcess(onboardingCurrentProcess)")

        fa-modifier(fa-size="[getPageWidth() - 10, 400]" fa-opacity="socialTransparency")
          fa-surface(ng-if="onboardingSocial")
            //- social 
            .social-info-container(ng-style="{'padding' : '10px', 'margin-top' : '{{photoInfoContainerMarginTop}}px'}")
              input.social-winner-input(placeholder="Facebook Name")
              input.social-winner-input(placeholder="Twitter Handle")
              .save-user-bio(ng-click="showOnboardingProcess(onboardingNextProcess)") Save
              .back-one-process(ng-click="backOnboardingProcess(onboardingCurrentProcess)")

        //- //- session
        //- .session-info-container(ng-if="onboardingSessionStart" ng-style="{'padding' : '10px', 'margin-top' : '{{photoInfoContainerMarginTop}}px'}")
        //-   .session-time Your time in the Spotlight ends:
        //-   .session-end-date TIME
        //-   .end-session(ng-click="showConfirmationDialog()") Start Session
        fa-modifier(fa-size="[getPageWidth() - 10, 400]" fa-opacity="tipsTransparency")
          fa-surface(ng-if="onboardingTips")
            //- tips
            .tips-info-container(ng-style="{'padding' : '10px', 'margin-top' : '{{photoInfoContainerMarginTop}}px'}")
              fa-app(ng-if="onboardingTips").scrolling
                fa-scroll-view#tips-scrollview(fa-pipe-from='tipsHandler' fa-options='options.tipsContainer')
                  fa-view(ng-repeat='tip in spotlightTips track by $index' fa-size='[300, 800]')
                    fa-modifier(fa-size='[getPageWidth(), 100]')
                      fa-surface.tip-item(fa-pipe-to='tipsHandler')
                       .tip {{tip}}
            .flip-back(ng-click="backOnboardingProcess(onboardingCurrentProcess)" ng-style="{'margin-left' : '{{flipBackMarginLeft}}px', 'margin-top' : '{{downArrowOnInfoView}}px'}")


